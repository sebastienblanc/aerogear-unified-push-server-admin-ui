<!-- The Mobile Applications List Partial-->
{{headAppsTitle totalApps  }}
<strong>Applications </strong>({{ totalApps }})

    <table class="rcue-table">
        <thead>
            <tr>
                <th colspan="5">
                {{#unless controllers.login.isViewer }}{{#linkTo "mobileApps.edit"}}<div class="table-create-btn topcoat-button">Create...</div>{{/linkTo}}{{/unless}}
                </th>
            </tr>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th class="rcue-table-number">Variants</th>
                <th colspan="2">&nbsp;</th>
            </tr>
        </thead>
        <tbody>
             {{#each app in controller}}
                <tr>
                    <td>{{#linkTo "variants" app}}{{ app.name }}{{/linkTo}}</td>
                    <td><span>{{ app.description }}<span></td>
                    <td class="rcue-table-number">{{ app.totalVariants }}</td>
                   {{#if  ../controllers.login.isViewer }}
                     <td class="action"></td>
                     <td class="action"></td>
                   {{else}}
                    <td class="action">
                        {{#linkTo "mobileApps.edit" app}} Rename...{{/linkTo}}
                    </td>
                    <td class="action">
                        <a href="#" {{ action "remove" app}}>Remove...</a>
                    </td>
                    {{/if}}
                </tr>
            {{else}}
                <tr>
                    <td colspan="5">Your applications will show up here, please create one first.</td>
                </tr>
            {{/each}}
        </tbody>
    </table>
