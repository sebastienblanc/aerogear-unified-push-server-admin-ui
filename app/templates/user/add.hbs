{{ partial "user/_generateLink" }}
<div>{{#linkTo "user"}}&larr; Back to Users{{/linkTo}}</div>
<div class="rcue-dialog">
  <header>
    <h1>
       Add a user
    </h1>
  </header>
  <div class="rcue-dialog-inner">
     <form id="user" {{action enroll controller target="controllers.userIndex" on="submit" }}>
     <fieldset>
       <p>
         <label>Login Name</label>
         {{input type="text" id="newUserLoginName" valueBinding="loginName" classNames="topcoat-text-inputs loginName" classNameBindings="validationErrors.loginName:error" }}
       </p>
       <p>
        <label>Role</label>
        <br>
        <label>
        {{view Ember.RadioButton name="role" value="developer" checked="checked" }}
        Developer
        </label>
        <br>
        <label>
        {{view Ember.RadioButton name="role" value="admin"}}
        Administrator
        </label>
         <br>
        <label>
        {{view Ember.RadioButton name="role" value="viewer"}}
        Viewer
        </label>

       </p>
        <input type="submit" class="topcoat-button" value="Enroll">
     </fieldset>
     </form>
  </div>
</div>