<!-- The Mobile Applications List Partial-->
<div id="mobile-application-variants-table">
    <table class="rcue-table">
        <thead>
            <tr>
                <th colspan="7">
                   {{#unless controllers.login.isViewer }}{{#linkTo "variants.add" this}}<div class="table-create-btn topcoat-button">Add...</div>{{/linkTo}}{{/unless}}
                </th>
            </tr>
            <tr>
                <th>Name</th>
                <th>Project Number</th>
                <th>Description</th>
                <th>Platform</th>
                <th class="rcue-table-number">Installations</th>
                <th colspan="2">&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            {{#each variant in variantList }}
                <tr>
                    <td>{{#linkTo "variant" variant}}{{variant.name}}{{/linkTo}}</td>
                    <td>{{ variant.googleProjectNumber }}</td>
                    <td>{{ variant.description }}</td>
                    <td>{{ variant.typeFormatted }}</td>
                    <td class="rcue-table-number">{{ totalInstances }}</td>
                    {{#if  ../controllers.login.isViewer }}
                    <td></td>
                    <td></td>
                    {{else}}
                    <td class="action">
                        {{#linkTo "variants.edit" variant}}Rename...{{/linkTo}}
                    </td>
                    <td class="action">
                        <a href="#" {{ action "remove" variant}}>Remove...</a>
                    </td>
                    {{/if}}
                </tr>
            {{else}}
                <tr>
                    <td colspan="6">{{#if isLoaded}}This application doesn't have any variants yet.{{/if}}</td>
                </tr>
            {{/each}}
        </tbody>
    </table>
            </div>
